{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "target": "ES2017",
    "module": "ESNext",
    "importsNotUsedAsValues": "error",
    "ignoreDeprecations": "5.0",
    "isolatedModules": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "strictNullChecks": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "webkit/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./.storybook/mock",
    ]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.svelte",
    "stories/**/*.ts"
  ],
  "exclude": [
    "node_modules/*",
    "**/*.test.ts"
  ]
}