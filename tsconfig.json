{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "module": "ESNext",
    "importsNotUsedAsValues": "error",
    "ignoreDeprecations": "5.0",
    "isolatedModules": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "strictNullChecks": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "webkit/*": [
        "src/*"
      ],
      "$app/*": ["./node_modules/@sveltejs/kit/types/index.d.ts"]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.svelte",
    "stories/**/*.ts",
    "stories/**/*.svelte"
  ],
  "exclude": [
    "node_modules/*",
    "**/*.test.ts"
  ]
}
